<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title></title>
    <script>
        function pegarArquivo() {
            let inputArquivo = document.getElementById("Arquivo")
            console.log(inputArquivo.)
        }
    </script>
</head>
<body>
    <h3>IMPORTAR TRANSAÇÕES</h3>
    <form action="/Cadastro/Incluir" method="post">
        <input type="file" name="Arquivo" id="Arquivo" />
        <br /><br />
        <button type="button" onclick="pegarArquivo()">Enviar</button>
        <input type="reset" value="Apagar" />
        <br /><br />

        <label>Nome do titular:</label>
        <input name="nome" />
        <br />
        <label>Conta:</label>
        <input name="conta" />
        <br />
        <label>Agencia:</label>
        <input name="agencia" />
        <br />
        <label>Banco:</label>
        <input name="banco" />
        <br />
        <label>Valor:</label>
        <input name="valor" />
        <br />
        <label>Data:</label>
        <input name="data" />
        <br />
        <button>Gravar</button>
    </form>
    <br />
    <h3>IMPORTAÇÕES REALIZADAS</h3>
    <ul>
        @foreach (var arquivo in ViewBag.Arquivos)
        {
            <li>@arquivo.Nome | @arquivo.Conta | @arquivo.Agencia | @arquivo.Banco | @arquivo.Valor | @arquivo.Data</li>;
        }
    </ul>
    
</body>
</html>